<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-name="GanttView" t-extend="GanttView">
        <t t-jquery="div.oe_gantt" t-operation="replace">
            <div class="oe_gantt">
                <button class="btn btn-primary btn-sm oe_gantt_button_create">Create (MY!!!)</button>
                <div class="btn-group btn-sm" data-toggle="buttons">
                    <label class="btn btn-default btn-sm">
                        <input type="radio" name="scale" value="day" /> Day
                    </label>
                    <label class="btn btn-default btn-sm">
                        <input type="radio" name="scale" value="week" /> Week
                    </label>
                    <label class="btn btn-default btn-sm">
                        <input type="radio" name="scale" value="month" /> Month
                    </label>
                    <label class="btn btn-default btn-sm">
                        <input type="radio" name="scale" value="year" /> Year
                    </label>
                </div>
                <div t-att-id="widget.chart_id" class="oe_gantt_view"/>
            </div>
        </t>
    </t>
    <t t-name="GanttView-create-button" t-extend="GanttView-create-button">
        <t t-jquery="button" t-operation="replace" />
    </t>
</templates>
